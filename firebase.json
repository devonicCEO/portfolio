{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "README.md",
      ".env",
      ".env.local",
      ".env.*.local"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/index.html",
        "type": 200
      }
    ]
  },
  "functions": {
    "source": "functions",
    "codebase": "default"
  }
}
